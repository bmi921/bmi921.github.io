<Layout>
  <main class="max-w-6xl mx-auto p-5 md:p-8">
    <section class="mt-5">
      <ul class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {
          posts.map((post) => (
            <li class="bg-white rounded-lg shadow-md overflow-hidden transition-all duration-300 hover:shadow-md hover:-translate-y-1">
              <a href={`/blog/${post.id}/`}>
                {post.data.heroImage && (
                  <Image
                    width={720}
                    height={360}
                    src={post.data.heroImage}
                    alt={post.data.title}
                    class="w-full h-48 object-cover"
                  />
                )}
                <div class="p-6">
                  <h4 class="text-xl font-bold text-gray-800 mb-2 truncate">
                    {post.data.title}
                  </h4>
                  <p class="text-sm text-gray-600">
                    <FormattedDate date={post.data.pubDate} />
                  </p>
                </div>
              </a>
            </li>
          ))
        }
      </ul>
    </section>
  </main>
  <Footer />
</Layout>
